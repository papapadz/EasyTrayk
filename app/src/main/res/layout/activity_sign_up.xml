<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    tools:context=".SignUp"
    android:orientation="vertical">

        <ImageView
            android:layout_gravity="center"
            android:layout_width="150sp"
            android:layout_height="150sp"
            android:src="@drawable/ic_launcher"
            />
        
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="vertical">

                       <LinearLayout
                           android:id="@+id/btnSignUpLinearLayout1"
                           android:layout_width="match_parent"
                           android:layout_height="match_parent"
                           android:orientation="vertical">

                               <ImageView
                                   android:tint="@color/colorPrimary"
                                   android:id="@+id/image_view"
                                   android:layout_width="80dp"
                                   android:layout_height="80dp"
                                   android:scaleType="centerCrop"
                                   android:layout_gravity="center"
                                   android:src="@drawable/ic_account_circle" />

                               <TextView
                                   android:layout_width="match_parent"
                                   android:layout_height="wrap_content"
                                       android:textColor="@color/colorPrimary"
                                       android:text="Profile Picture"
                                       android:gravity="center"/>

                               <EditText
                                   android:drawableTint="@color/colorPrimary"
                                   android:drawableStart="@drawable/person"
                                   android:hint="First Name"
                                   android:id="@+id/eFullName"
                                   android:layout_width="match_parent"
                                   android:layout_height="wrap_content" />

                               <EditText
                                   android:drawableTint="@color/colorPrimary"
                                   android:drawableStart="@drawable/person"
                                   android:hint="Middle Name"
                                   android:id="@+id/eMiddleName"
                                   android:layout_width="match_parent"
                                   android:layout_height="wrap_content" />

                               <EditText
                                   android:drawableTint="@color/colorPrimary"
                                   android:drawableStart="@drawable/person"
                                   android:hint="Last Name"
                                   android:id="@+id/eLastName"
                                   android:layout_width="match_parent"
                                   android:layout_height="wrap_content" />


                               <EditText
                                   android:drawableTint="@color/colorPrimary"
                                   android:drawableStart="@drawable/ic_home"
                                   android:hint="Address"
                                   android:id="@+id/eAddress"
                                   android:layout_width="match_parent"
                                   android:layout_height="wrap_content" />

                               <EditText
                                   android:maxLength="11"
                                   android:inputType="phone"
                                   android:drawableTint="@color/colorPrimary"
                                   android:drawableStart="@drawable/ic_iphone"
                                   android:hint="Phone Number"
                                   android:layout_gravity="center"
                                   android:id="@+id/ePhoneNumber"
                                   android:layout_width="match_parent"
                                   android:layout_height="wrap_content" />

                               <AutoCompleteTextView
                                   android:editable="false"
                                   android:drawableTint="@color/colorPrimary"
                                   android:drawableStart="@drawable/ic_list"
                                   android:hint="Category"
                                   android:id="@+id/eCategory"
                                   android:layout_width="match_parent"
                                   android:layout_height="wrap_content" />

                               <EditText
                                   android:drawableTint="@color/colorPrimary"
                                   android:drawableStart="@drawable/ic_mail"
                                   android:hint="Email Address"
                                   android:layout_gravity="center"
                                   android:id="@+id/eEmail"
                                   android:layout_width="match_parent"
                                   android:layout_height="wrap_content"
                                   />


                               <AutoCompleteTextView
                                   android:editable="false"
                                   android:drawableTint="@color/colorPrimary"
                                   android:drawableStart="@drawable/ic_checklist"
                                   android:hint="Type of ID"
                                   android:id="@+id/idType"
                                   android:layout_width="match_parent"
                                   android:layout_height="wrap_content" />

                               <TextView
                                   android:textColor="@color/blue"
                                   android:gravity="center"
                                   android:layout_width="match_parent"
                                   android:layout_height="wrap_content"
                                   android:text="* Picture of ID" />

                               <ImageView
                                   android:tint="@color/colorPrimary"
                                   android:id="@+id/img_id"
                                   android:layout_marginTop="10dp"
                                   android:padding="10dp"
                                   android:layout_gravity="center"
                                   android:layout_width="match_parent"
                                   android:layout_height="100dp"
                                   android:src="@drawable/ic_menu_camera"
                                   />

                               <Button
                                   android:layout_marginTop="10dp"
                                   android:id="@+id/button2"
                                   android:layout_width="match_parent"
                                   android:layout_height="wrap_content"
                                   android:background="@color/colorPrimary"
                                   android:text="REGISTER"
                                   android:textColor="#ffffff"
                                   android:textSize="18dp"
                                   android:textStyle="bold" />

                               <Button
                                   android:layout_marginTop="10dp"
                                   android:id="@+id/button3"
                                   android:layout_width="match_parent"
                                   android:layout_height="wrap_content"
                                   android:background="@color/green"
                                   android:text="CANCEL"
                                   android:textColor="#ffffff"
                                   android:textSize="18dp"
                                   android:textStyle="bold" />

                       </LinearLayout>
                       <LinearLayout
                           android:visibility="gone"
                           android:id="@+id/btnSignUpLinearLayout3"
                           android:layout_width="match_parent"
                           android:layout_height="match_parent"
                               android:orientation="vertical">

                               <EditText
                                   android:drawableTint="@color/colorPrimary"
                                   android:drawableStart="@drawable/ic_password"
                                   android:hint="Ilagay and Password"
                                   android:layout_gravity="center"
                                   android:id="@+id/mpassword"
                                   android:layout_width="match_parent"
                                   android:layout_height="wrap_content"
                                   android:inputType="textPassword" />
                               <CheckBox
                                   android:id="@+id/show_hide_checkbox_1"
                                   android:layout_width="wrap_content"
                                   android:layout_height="wrap_content"
                                   android:text="Show/Hide password"
                                   android:textSize="10sp" />

                               <EditText
                                   android:drawableTint="@color/colorPrimary"
                                   android:drawableStart="@drawable/ic_password"
                                   android:hint="Kumpirmahin ang Password"
                                   android:layout_gravity="center"
                                   android:id="@+id/mConfirmPassword"
                                   android:layout_width="match_parent"
                                   android:layout_height="wrap_content"

                                   android:inputType="textPassword" />
                               <CheckBox
                                   android:id="@+id/show_hide_checkbox_2"
                                   android:layout_width="wrap_content"
                                   android:layout_height="wrap_content"
                                   android:text="Show/Hide password"
                                   android:textSize="10sp" />

                               <TextView
                                   android:layout_width="match_parent"
                                   android:layout_height="wrap_content"
                                   android:textSize="12sp"
                                   android:text="Kaylangan maglagay ng walo o higit pang letra" />

                               <Button
                                   android:layout_marginTop="10dp"
                                   android:id="@+id/button4"
                                   android:layout_width="match_parent"
                                   android:layout_height="wrap_content"
                                   android:background="@color/colorPrimary"
                                   android:text="REGISTER"
                                   android:textColor="#ffffff"
                                   android:textSize="18dp"
                                   android:textStyle="bold" />

                       </LinearLayout>

                       <LinearLayout
                           android:visibility="gone"
                           android:id="@+id/btnSignUpLinearLayout2"
                           android:layout_width="match_parent"
                           android:layout_height="match_parent"
                           android:orientation="vertical">

                               <TextView
                                   android:layout_width="match_parent"
                                   android:layout_height="wrap_content"
                                   android:textColor="@color/colorPrimary"
                                   android:text="Enter OTP sent to your email"/>

                               <LinearLayout
                                   android:layout_width="match_parent"
                                   android:layout_height="wrap_content"
                                   android:orientation="horizontal">

                                       <EditText
                                           android:textAlignment="center"
                                           android:maxLength="1"
                                           android:layout_margin="2dp"
                                           android:layout_gravity="center"
                                           android:id="@+id/otp1"
                                           android:layout_width="0dp"
                                           android:layout_weight="1"
                                           android:layout_height="100dp"
                                           android:textSize="24dp"
                                           android:inputType="number" />

                                       <EditText
                                           android:textAlignment="center"
                                           android:maxLength="1"
                                           android:layout_margin="2dp"
                                           android:layout_gravity="center"
                                           android:id="@+id/otp2"
                                           android:layout_width="0dp"
                                           android:layout_weight="1"
                                           android:layout_height="100dp"
                                           android:textSize="24dp"
                                           android:inputType="number" />

                                       <EditText
                                           android:textAlignment="center"
                                           android:maxLength="1"
                                           android:layout_margin="2dp"
                                           android:layout_gravity="center"
                                           android:id="@+id/otp3"
                                           android:layout_width="0dp"
                                           android:layout_weight="1"
                                           android:layout_height="100dp"
                                           android:textSize="24dp"
                                           android:inputType="number" />

                                       <EditText
                                           android:textAlignment="center"
                                           android:maxLength="1"
                                           android:layout_margin="2dp"
                                           android:layout_gravity="center"
                                           android:id="@+id/otp4"
                                           android:layout_width="0dp"
                                           android:layout_weight="1"
                                           android:layout_height="100dp"
                                           android:textSize="24dp"
                                           android:inputType="number" />

                               </LinearLayout>

                               <TextView
                                   android:id="@+id/resendOTP"
                                   android:gravity="end"
                                   android:layout_width="match_parent"
                                   android:layout_height="wrap_content"
                                   android:textColor="@color/colorPrimary"
                                   android:text="Resend OTP" />

                               <Button
                                   android:layout_marginTop="10dp"
                                   android:id="@+id/btnEnterOTP"
                                   android:layout_width="match_parent"
                                   android:layout_height="wrap_content"
                                   android:background="@color/colorPrimary"
                                   android:text="SUBMIT"
                                   android:textColor="#ffffff"
                                   android:textSize="18dp"
                                   android:textStyle="bold" />

                       </LinearLayout>

               </LinearLayout>

        </ScrollView>

</LinearLayout>
